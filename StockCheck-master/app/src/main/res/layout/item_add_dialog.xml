<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:scrollbars="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="371dp"
        android:layout_height="645dp"
        app:cardBackgroundColor="@color/blueBlack"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="385dp"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/tvAddText"
                android:layout_width="327dp"
                android:layout_height="45dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Please enter the product details below..."
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="154dp"
                android:layout_height="44dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:fontFamily="sans-serif-condensed-medium"
                android:hint="Enter Name..."
                android:inputType="text"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvNameDia"
                app:layout_constraintTop_toBottomOf="@+id/tvAddText" />

            <TextView
                android:id="@+id/tvNameDia"
                android:layout_width="137dp"
                android:layout_height="51dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Product's Name:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAddText" />

            <TextView
                android:id="@+id/tvTypeDia"
                android:layout_width="144dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Product's Type:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNameDia" />

            <Spinner
                android:id="@+id/spType"
                android:layout_width="154dp"
                android:layout_height="47dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:entries="@array/spinner_txt"
                android:foregroundTint="#FAFAFA"
                android:spinnerMode="dialog"
                app:layout_constraintStart_toEndOf="@+id/tvTypeDia"
                app:layout_constraintTop_toBottomOf="@+id/etName" />

            <TextView
                android:id="@+id/tvQuantDia"
                android:layout_width="152dp"
                android:layout_height="46dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Product's Amount:"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTypeDia" />

            <EditText
                android:id="@+id/etQuan"
                android:layout_width="163dp"
                android:layout_height="47dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="Enter Quantity..."
                android:inputType="number"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvQuantDia"
                app:layout_constraintTop_toBottomOf="@+id/spType" />

            <TextView
                android:id="@+id/tvPurchDia"
                android:layout_width="152dp"
                android:layout_height="59dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Product's Purchase Price"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvQuantDia" />

            <EditText
                android:id="@+id/etPurch"
                android:layout_width="165dp"
                android:layout_height="45dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Enter Price..."
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvPurchDia"
                app:layout_constraintTop_toBottomOf="@+id/etQuan" />

            <TextView
                android:id="@+id/tvSaleDia"
                android:layout_width="156dp"
                android:layout_height="58dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Product's Sale Price"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvPurchDia" />

            <EditText
                android:id="@+id/etSale"
                android:layout_width="163dp"
                android:layout_height="59dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Enter Price..."
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvSaleDia"
                app:layout_constraintTop_toBottomOf="@+id/etPurch" />

            <TextView
                android:id="@+id/tvDateDia"
                android:layout_width="148dp"
                android:layout_height="57dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Product's Expiration Date"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvSaleDia" />

            <EditText
                android:id="@+id/etDate"
                android:layout_width="162dp"
                android:layout_height="45dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Enter Date..."
                android:inputType="date"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvDateDia"
                app:layout_constraintTop_toBottomOf="@+id/etSale" />


            <TextView
                android:id="@+id/tvThreshDia"
                android:layout_width="145dp"
                android:layout_height="37dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Set Threshold:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDateDia" />

            <EditText
                android:id="@+id/etThresh"
                android:layout_width="164dp"
                android:layout_height="44dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Enter Threshold..."
                android:inputType="date"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/tvThreshDia"
                app:layout_constraintTop_toBottomOf="@+id/etDate" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="88dp"
                android:layout_height="53dp"
                android:layout_marginStart="148dp"
                android:layout_marginTop="68dp"
                android:backgroundTint="@color/white"
                app:icon="@android:drawable/ic_menu_send"
                app:iconGravity="top"
                app:iconTint="#111f28"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDateDia" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>